<%= render "steps_progress", :post => @post%>

<%= form_for @post, :html => {:multipart => true} do |f| %>
	<%= render "shared/error_messages", :object => f.object %>
	<%= render "step_#{@post.current_step}", :f => f, :post => @post %>

	<% if @post.completed.to_i < 0 %>
		<%= f.submit "Save" %>
	<% else %>
		<%= f.submit "Next" %>
		<%= f.submit :name => "commit", :value => "I'll finish later" %>
	<% end %>

<% end %>